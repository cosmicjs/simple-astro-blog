---
import Footer from "../components/Footer.astro";
import Metadata from "../components/Metadata.astro";
import Navigation from "../components/Navigation.astro";
const { title, description, imageUrl } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <Metadata title={title} description={description} imageUrl={imageUrl} />
  </head>
  <body class="bg-zinc-100">
    <div class="mt-12 p-2 md:mt-0 text-center border-b bg-white text-sm">
      The source code for this portfolio is{" "}
      <a
        href="https://github.com/cosmicjs/nextjs-developer-portfolio"
        target="_parent"
        class="underline hover:text-accent transition-colors"
      >
        available on GitHub
      </a>
      .
    </div>
    <Navigation />
    <main
      class="flex flex-col max-w-3xl mx-auto my-12 px-3 lg:px-0 min-h-screen"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
